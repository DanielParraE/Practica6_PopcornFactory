<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_grey"
    tools:context=".SelectedSeatProcedure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEAT CONFIRMATION"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:textColor="@color/yellow_font"
            android:textSize="35sp"
            android:paddingRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/yellow_font"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_selected_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected seat: "
        android:textColor="@color/light_grey"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/light_grey"
        android:hint="Your Name"
        android:inputType="text"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/yellow_font"
        android:textColorHint="@color/light_grey"
        />

    <Button
        android:id="@+id/btn_buy_ticket_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/background_grey"
        android:background="@drawable/round_button"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:text="Buy my ticket!"
        />

</LinearLayout>