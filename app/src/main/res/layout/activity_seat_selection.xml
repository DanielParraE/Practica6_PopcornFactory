<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_grey"
    tools:context=".SeatSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_title_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOVIES"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:textColor="@color/yellow_font"
            android:textAlignment="textEnd"
            android:textSize="35sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <View
            android:layout_width="270dp"
            android:layout_height="4dp"
            android:background="@color/yellow_font"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:paddingHorizontal="@dimen/hpradioGroup"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="@dimen/radiobutton"
            android:layout_height="@dimen/radiobutton"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/background_grey"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"/>

        <RadioButton
            android:layout_width="@dimen/radiobutton"
            android:layout_height="@dimen/radiobutton"
